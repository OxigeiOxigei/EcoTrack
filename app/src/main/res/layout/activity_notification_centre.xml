<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/yellow">

        <!-- Toolbar -->
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:navigationIcon="@drawable/ic_back"/>

        <!-- Title -->
        <TextView
            android:id="@+id/textView_notifications_title"
            android:layout_marginTop="60dp"
            android:text="Notification Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitoextrabold"
            android:letterSpacing="0.1"
            android:layout_marginLeft="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/black"
            android:textSize="58sp"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="400dp"
            android:layout_height="430dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_bg"
            android:orientation="vertical">


        <!-- Notification Option 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView_notification_1"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:text="Trash pickup reminder"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:letterSpacing="0.2" />

            <Switch
                android:id="@+id/switch_notification_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Notification Option 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView_notification_2"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:text="Special collection day reminder"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:letterSpacing="0.2" />

            <Switch
                android:id="@+id/switch_notification_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Notification Option 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView_notification_3"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:text="Waste Reduction Challenge"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                android:letterSpacing="0.2" />

            <Switch
                android:id="@+id/switch_notification_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Notification Option 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView_notification_4"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:text="Eco tip for reducing waste"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:letterSpacing="0.2" />

            <Switch
                android:id="@+id/switch_notification_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

            <Button
                android:text="Update"
                android:id="@+id/updateButton"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:background="@drawable/button_bg"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/nunitoextrabold"
                android:letterSpacing="0.3"/>
        </LinearLayout>

    </LinearLayout>