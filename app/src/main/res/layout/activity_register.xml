<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newdarkgreen"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TBMainAct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/newdarkgreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_back"/>


    <TextView
        android:id="@+id/textView_login_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/nunitoextrabold"
        android:letterSpacing="0.2"
        android:text="Sign-Up"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/black"
        android:textSize="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_welcom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/nunitosemibold"
        android:letterSpacing="0.2"
        android:text="Welcome to EcoTrack"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_login_head" />


        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="380dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="680dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/login_bg"
            app:layout_constraintTop_toBottomOf="@id/textView_welcom">


            <TextView
                android:id="@+id/textView_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosemibold"
                android:text="Name*"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/lightblack"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_name"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_name"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:textColor="@color/lightblack"
                android:text="Email*"
                android:textSize="16sp"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_email"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_email"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:textColor="@color/lightblack"
                android:text="Password*"
                android:textSize="16sp"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_password"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_password"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Confirm Password*"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_confirm_password"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter Password Again"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_confirm_password"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:textColor="@color/lightblack"
                android:text="Address*"
                android:textSize="16sp"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_address"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter Address"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_address"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="City*"
                android:textSize="16sp"
                android:textColor="@color/lightblack"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_city"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter City"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_city"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="State*"
                android:textSize="16sp"
                android:letterSpacing="0.2"
                android:textColor="@color/lightblack"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_state"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter State"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_register_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText_register_state"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Postcode*"
                android:textSize="16sp"
                android:textColor="@color/lightblack"
                android:letterSpacing="0.2"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/editText_register_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_register_postcode"
                android:layout_marginHorizontal="10dp"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/nunitosemibold"
                android:hint="Enter Postcode"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

        </RelativeLayout>

    <Button
        android:id="@+id/button_register"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/login_btn_bg"
        android:fontFamily="@font/nunitobold"
        android:letterSpacing="0.3"
        android:text="Sign-up"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/middle"
        app:layout_constraintStart_toStartOf="@id/middle"
        app:layout_constraintTop_toTopOf="@id/middle"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>
