<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <!-- Background Badge (uncolored or colored based on status) -->
    <ImageView
        android:id="@+id/badgeBackground"
        android:layout_width="121dp"
        android:layout_height="168dp"
        android:scaleType="fitCenter"
        android:contentDescription="Badge Background" />

    <!-- Unique Image (only shown for colored badges) -->
    <ImageView
        android:id="@+id/uniqueImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Unique Image"
        android:visibility="gone"
        android:scaleType="fitCenter" />

</FrameLayout>
