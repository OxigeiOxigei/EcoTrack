<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc14f"
    tools:context=".ReportOverflowingBins">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc14f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_login_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/nunitoextrabold"
                android:letterSpacing="0.2"
                android:text="Report Overflowing Bins"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#6b3e0a"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="390dp"
                android:layout_height="900dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_bg"
                android:padding="10dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Email"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"/>

                <!-- Email EditText -->
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="379dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:fontFamily="@font/nunitosemibold"
                    android:hint="Enter email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Address"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"
                    android:layout_below="@id/emailEditText"/>

                <!-- Address EditText -->
                <EditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:fontFamily="@font/nunitosemibold"
                    android:hint="Enter address"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="City"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"
                    android:layout_below="@id/addressEditText"/>

                <!-- City EditText -->
                <EditText
                    android:id="@+id/cityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/city"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:fontFamily="@font/nunitosemibold"
                    android:hint="Enter city"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="State"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"
                    android:layout_below="@id/cityEditText"/>

                <!-- State EditText -->
                <EditText
                    android:id="@+id/stateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/state"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:fontFamily="@font/nunitosemibold"
                    android:hint="Enter state"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Postcode"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"
                    android:layout_below="@id/stateEditText"/>

                <!-- Postcode EditText -->
                <EditText
                    android:id="@+id/postcodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postcode"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:fontFamily="@font/nunitosemibold"
                    android:hint="Enter postcode"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/nunitobold"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="Description"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:letterSpacing="0.2"
                    android:layout_below="@id/postcodeEditText"/>

                <!-- Description EditText -->
                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/desc"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:fontFamily="@font/nunitosemibold"
                    android:hint="Enter description"
                    android:padding="5dp"
                    android:textSize="16sp" />

                <!-- ImageView for displaying uploaded image -->
                <ImageView
                    android:id="@+id/uploadedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="226dp"
                    android:layout_below="@id/descriptionEditText"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_camera_ne" />

                <Button
                    android:id="@+id/uploadPhotoButton"
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:layout_below="@id/uploadedImageView"
                    android:layout_marginStart="62dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/brown_btn"
                    android:fontFamily="@font/nunitobold"
                    android:letterSpacing="0.2"
                    android:text="Upload Photo"
                    android:textColor="@color/darkbeige" />
            </RelativeLayout>


            <!-- Submit Report Button -->

            <Button
                android:id="@+id/submitReportButton"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/brown_btn"
                android:fontFamily="@font/nunitobold"
                android:letterSpacing="0.2"
                android:text="Submit"
                android:textColor="@color/darkbeige" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>